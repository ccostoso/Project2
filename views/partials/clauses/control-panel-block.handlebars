<div class="row d-flex justify-content-between my-1">
    <div id="clause-title" data-title-id="{{dataValues.id}}"> {{dataValues.clause_title}}</div>

    <div class="d-flex">

        <div class="dropdown mx-1">
            <button class="btn btn-secondary dropdown-toggle" type="button" 
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-button-answer="{{dataValues.clause_requires}}" data-button-require-id="{{dataValues.id}}">
                {{dataValues.clause_requires}}
            </button>
            <div class="dropdown-menu" data-require-menu-id="{{dataValues.id}}" data-require-answer="{{dataValues.clause_requires}}">
                <a class="dropdown-item" data-require-id="{{dataValues.id}}" data-require-value="OUI" href="#">OUI</a>
                <a class="dropdown-item" data-require-id="{{dataValues.id}}" data-require-value="NON" href="#">NON</a>
                <a class="dropdown-item" data-require-id="{{dataValues.id}}" data-require-value="DEP" href="#">DEP</a>
            </div>
        </div>
        <div>
            <button data-delete-state="false" data-delete-id="{{dataValues.id}}"
                class="btn btn-warning delete-check">Delete?</button>
            <button data-update-id="{{dataValues.id}}" class="btn btn-primary confirm">Update</button>
        </div>

    </div>
</div>