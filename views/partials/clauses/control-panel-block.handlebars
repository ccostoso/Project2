<div class="row d-flex justify-content-between my-1">
    <div>
        <div class="clause-display-title" data-display-title-id="{{dataValues.id}}"
            data-display-title-value="{{dataValues.clause_title}}">{{dataValues.clause_title}}</div>
        <div class="input-group mb-3 d-none" data-input-group-id={{dataValues.id}}>
            <input type="text" class="form-control clause-edit-title" placeholder="{{dataValues.clause_title}}" data-edit-title-id="{{dataValues.id}}" data-edit-title-value="{{dataValues.clause_title}}">
            <div class="input-group-append">
                <button class="btn btn-outline-secondary edit-title-button" data-edit-title-button-id="{{dataValues.id}}" type="button">OK</button>
            </div>
        </div>
    </div>

    <div class="d-flex">

        <div class="dropdown mx-1">
            <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true"
                aria-expanded="false" data-button-answer="{{dataValues.clause_requires}}"
                data-button-require-id="{{dataValues.id}}">
                {{dataValues.clause_requires}}
            </button>
            <div class="dropdown-menu" data-require-menu-id="{{dataValues.id}}"
                data-require-answer="{{dataValues.clause_requires}}">
                <a class="dropdown-item clause-dropdown-item" data-require-id="{{dataValues.id}}" data-require-value="OUI" href="#">OUI</a>
                <a class="dropdown-item clause-dropdown-item" data-require-id="{{dataValues.id}}" data-require-value="NON" href="#">NON</a>
                <a class="dropdown-item clause-dropdown-item" data-require-id="{{dataValues.id}}" data-require-value="DEP" href="#">DEP</a>
            </div>
        </div>
        <div>
            <button data-delete-state="false" data-delete-id="{{dataValues.id}}"
                class="btn btn-warning delete-check">Delete?</button>
            <button data-update-id="{{dataValues.id}}" class="btn btn-primary confirm">Update</button>
        </div>

    </div>
</div>