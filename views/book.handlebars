<div class="container d-flex flex-column justify-content-center">
    {{#if isUser}}
    <form action="/book" method="get" class="input-group my-4 mx-auto col-md-8 p-0">
        <input class="form-control" id="book_search_input" type="text" placeholder="Search Book Title"
            aria-placeholder="Search for a clause">
        </input>
        <div class="input-group-append">
            <button id="book_search_button" type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>
    {{/if}}


    {{#unless isUser}}
     <form action="/book" method="POST" class="input-group my-4 mx-auto col-md-8 p-0">
        <div class="form-row align-items-center">
            <div class="col-auto">
                <input type="text" class="form-control mb-2" id="book_name" placeholder="Book Title">
            </div>
            <div class="col-auto">
                <input type="text" class="form-control mb-2" id="book_url" placeholder="Book URL">
            </div>
            <div class="col-auto">
                <input type="text" class="form-control mb-2" id="img_url" placeholder="Image URL">
            </div>
            <div class="col-auto">
                <input type="text" class="form-control mb-2" id="book_desc" placeholder="Book Description">
            </div>

            <div class="col-auto">
                <button id="book_submit_button" type="submit" class="btn btn-primary mb-2">Submit</button>
            </div>
        </div>
    </form>
    {{/unless}}
</div>